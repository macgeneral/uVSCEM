{
  "image": "mcr.microsoft.com/devcontainers/python:3.8-bookworm",
  "mounts": [
    "source=/${localWorkspaceFolder}/.devcontainer/devcontainer.json,target=${HOME}/devcontainer.json,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "streetsidesoftware.code-spell-checker",
        "ms-python.python"
      ]
    }
  },
  "postAttachCommand": "python3 -m pip install poetry && poetry install && poetry run uvscem --config-name ${HOME}.devcontainer/devcontainer.json"
}